# ============================================================================
# Staging Environment Configuration
# ============================================================================
# 
# Copy this file to .env.staging and fill in your staging/test API keys.
# The staging environment uses separate API keys to avoid affecting production data.
#
# IMPORTANT: Never commit real API keys to version control!
# 
# Usage:
#   1. Copy: cp .env.staging.example .env.staging
#   2. Fill in your staging API keys
#   3. Run tests: python tests/integration_tests.py --env staging
# ============================================================================

# Environment identifier
ENVIRONMENT=staging

# ============================================================================
# GoHighLevel (Staging Sub-Account)
# Create a separate sub-account in GHL for staging/testing
# ============================================================================
GHL_API_KEY=your_staging_ghl_api_key
GHL_LOCATION_ID=your_staging_location_id
GHL_WEBHOOK_SECRET=your_webhook_secret

# ============================================================================
# Instantly (Staging Workspace)
# Create a separate workspace in Instantly for testing
# ============================================================================
INSTANTLY_API_KEY=your_staging_instantly_api_key
INSTANTLY_WEBHOOK_SECRET=your_webhook_secret

# ============================================================================
# Clay (Development API Key)
# Use development/sandbox key for Clay
# ============================================================================
CLAY_API_KEY=your_staging_clay_api_key

# ============================================================================
# RB2B (Development Key)
# ============================================================================
RB2B_API_KEY=your_staging_rb2b_api_key

# ============================================================================
# LinkedIn Scraping (Staging Cookies)
# Use a test LinkedIn account for staging
# ============================================================================
LINKEDIN_COOKIES=your_staging_linkedin_cookies

# ============================================================================
# Testing Configuration
# ============================================================================
USE_MOCKS=true
TEST_EMAIL_DOMAIN=test.chiefaiofficer.com
MAX_TEST_CONTACTS=10
MAX_TEST_CAMPAIGNS=3

# ============================================================================
# Rate Limiting (Reduced for Staging)
# ============================================================================
GHL_RATE_LIMIT_PER_MINUTE=30
INSTANTLY_RATE_LIMIT_PER_MINUTE=20
LINKEDIN_RATE_LIMIT_PER_HOUR=50

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_DOCUMENT_AI=true
ENABLE_SEMANTIC_ANCHORS=true
ENABLE_RPI_WORKFLOW=true
ENABLE_WEBHOOK_HANDLERS=true

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=DEBUG
LOG_TO_FILE=true
LOG_FILE_PATH=.hive-mind/logs/staging.log
