# CAIO RevOps Swarm - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# GOHIGHLEVEL (Required)
# =============================================================================
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id
GHL_BASE_URL=https://rest.gohighlevel.com/v1

# =============================================================================
# GOOGLE APIs (Required for Calendar/Gmail)
# =============================================================================
# Path to your Google OAuth credentials JSON file
GOOGLE_CREDENTIALS_PATH=./credentials/google_credentials.json
# After first auth, token is stored here
GOOGLE_TOKEN_PATH=./credentials/google_token.json

# =============================================================================
# SUPABASE (Required for data persistence)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# =============================================================================
# ENRICHMENT (Required for lead enrichment)
# =============================================================================
CLAY_API_KEY=your_clay_api_key
PROXYCURL_API_KEY=your_proxycurl_api_key

# =============================================================================
# OPTIONAL - Zoom Integration
# =============================================================================
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# =============================================================================
# OPTIONAL - Slack Notifications
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#sales-alerts

# =============================================================================
# LLM PROVIDERS (For AI Agent Operations)
# =============================================================================
# Primary: Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# Secondary Fallback: OpenAI
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Dashboard port
DASHBOARD_PORT=8080

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Working hours (for scheduling guardrails)
WORKING_HOURS_START=9
WORKING_HOURS_END=18
DEFAULT_TIMEZONE=America/New_York

# =============================================================================
# RATE LIMITS (adjust based on your API tier)
# =============================================================================
GHL_DAILY_LIMIT=150
GHL_HOURLY_LIMIT=20
CALENDAR_HOURLY_LIMIT=100

# =============================================================================
# EMERGENCY CONTROLS (Production Safety)
# =============================================================================
# Global kill switch - set to true to IMMEDIATELY stop all outbound operations
# This blocks ALL email sends, SMS, and CRM writes regardless of other settings
EMERGENCY_STOP=false

# Canary mode - when true, only sends to internal test addresses
CANARY_MODE=false

# Internal test email addresses (comma-separated) - used in canary mode
INTERNAL_TEST_EMAILS=test@chiefaiofficer.com
