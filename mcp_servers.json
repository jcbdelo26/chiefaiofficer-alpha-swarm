{
  "mcpServers": {
    "debug-mcp": {
      "command": "python",
      "args": ["mcp-servers/debug-mcp/server.py"],
      "description": "Full-stack debugging and error correlation for the CAIO dashboard",
      "env": {
        "DASHBOARD_URL": "${DASHBOARD_URL:-http://localhost:8080}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-playwright"],
      "description": "Browser automation for visual UI debugging, screenshots, and DOM inspection",
      "env": {
        "PLAYWRIGHT_BROWSER": "chromium"
      }
    },
    "hunter-mcp": {
      "command": "python",
      "args": ["mcp-servers/hunter-mcp/server.py"],
      "description": "LinkedIn scraping and lead hunting"
    },
    "enricher-mcp": {
      "command": "python",
      "args": ["mcp-servers/enricher-mcp/server.py"],
      "description": "Lead enrichment via Clay and ProxyCurl"
    },
    "ghl-mcp": {
      "command": "python",
      "args": ["mcp-servers/ghl-mcp/server.py"],
      "description": "GoHighLevel CRM operations"
    },
    "orchestrator-mcp": {
      "command": "python",
      "args": ["mcp-servers/orchestrator-mcp/server.py"],
      "description": "Master orchestration and agent coordination"
    },
    "google-calendar-mcp": {
      "command": "python",
      "args": ["mcp-servers/google-calendar-mcp/server.py"],
      "description": "Google Calendar operations with scheduling guardrails"
    },
    "email-threading-mcp": {
      "command": "python",
      "args": ["mcp-servers/email-threading-mcp/server.py"],
      "description": "Email thread parsing, intent detection, and context extraction"
    },
    "supabase-mcp": {
      "command": "python",
      "args": ["mcp-servers/supabase-mcp/server.py"],
      "description": "Supabase database operations"
    },
    "cache-mcp": {
      "command": "python",
      "args": ["mcp-servers/cache-mcp/server.py"],
      "description": "Distributed caching layer"
    },
    "learning-mcp": {
      "command": "python",
      "args": ["mcp-servers/learning-mcp/server.py"],
      "description": "Self-annealing and pattern learning"
    },
    "context-mcp": {
      "command": "python",
      "args": ["mcp-servers/context-mcp/server.py"],
      "description": "Context management and compaction"
    },
    "slack-mcp": {
      "command": "python",
      "args": ["mcp-servers/slack-mcp/server.py"],
      "description": "Slack integration for approvals, alerts, and notifications",
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_SIGNING_SECRET": "${SLACK_SIGNING_SECRET}",
        "SLACK_DEFAULT_CHANNEL": "${SLACK_DEFAULT_CHANNEL:-#revops-alerts}",
        "SLACK_APPROVAL_CHANNEL": "${SLACK_APPROVAL_CHANNEL:-#revops-approvals}"
      }
    }
  }
}
